	"version": "0.2.0",
	"configurations": [
		{"name":"Run tests","type":"python","request":"launch","module":"unittest", "args": ["-c", "tests/*"]},
		{
			"name": "Run (Text Mode) (Integrated Terminal)",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/main.py",
			"console": "integratedTerminal",
			"args": ["--mode", "text"]
		},
		{
			"name": "Run (Voice Mode) (Integrated Terminal)",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/main.py",
			"console": "integratedTerminal",
			"args": ["--mode", "voice", "--log-level", "DEBUG"]
		},
		{
			"name": "Run (Voice Mode) (External Terminal)",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/main.py",
			"console": "externalTerminal"
		}
	]
}